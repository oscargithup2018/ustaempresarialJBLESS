<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0"
                 xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">

    <named-query name="Concepto.LISTARCONCEPTO">
        <query>
            SELECT c
            FROM Concepto c
        </query>
    </named-query>
    <named-query name="Concepto.LISTARCONCEPTOBYNAME">
        <query>
            SELECT c
            FROM Concepto c
            WHERE c.nombre like '%:nombre%'
        </query>
    </named-query>

    <named-query name="LibroDiario.LISTAR_LIBRO_DIARIO">
        <query>
            SELECT l
            FROM LibroDiario l
        </query>
    </named-query>
    <named-query name="LibroDiario.LISTARBYNAME">
        <query>
            SELECT c
            FROM Concepto c
            WHERE c.nombre like '%:nombre%'
        </query>
    </named-query>

    <named-query name="LibroMayor.LISTAR_LIBRO_MAYOR">
        <query>
            SELECT l
            FROM LibroMayor l
        </query>
    </named-query>
    <named-query name="LibroMayor.LISTAR_LIBRO_MAYOR_BYID">
        <query>
            SELECT lm
            FROM LibroMayor lm
            WHERE lm.id = '%:id%'
        </query>
    </named-query>

    <named-query name="Periodo.LISTARPERIODO">
        <query>
            SELECT p
            FROM Periodo p
        </query>
    </named-query>
    <named-query name="Periodo.LISTARPERIODOBYNAME">
        <query>
            SELECT p
            FROM Periodo p
            WHERE p.codigo = :codigo
        </query>
    </named-query>

    <named-query name="PlanContable.LISTAR_PLANCONTABLE">
        <query>
            SELECT p
            FROM PlanContable p
        </query>
    </named-query>
    <named-query name="PlanContable.LISTAR_PLANCONTABLE_BYNAME">
        <query>
            SELECT p
            FROM PlanContable p
            WHERE p.nombre like '%:nombre%'
        </query>
    </named-query>
    <named-query name="LogCuenta.LISTAR__LOGCUENTA">
        <query>
            SELECT l.descripcion_cuenta_nueva,l.nombre_cuenta_nueva,l.tipo_cuenta_nueva,i.vigencia_cuenta_nueva
            FROM LogCuenta l
        </query>
    </named-query>
</entity-mappings>
