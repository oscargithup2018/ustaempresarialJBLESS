	<persistence-unit name="modeloNomina">
		<class>modeloNomina.Cargo</class>
		<class>modeloNomina.Concepto</class>
		<class>modeloNomina.Contrato</class>
		<class>modeloNomina.Dependencia</class>
		<class>modeloNomina.HojaVida</class>
		<class>modeloNomina.Nomina</class>
		<class>modeloNomina.NominaPK</class>
		<class>modeloNomina.Periodo</class>
		
